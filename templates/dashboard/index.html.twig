{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<div
		class="min-h-screen flex bg-gray-100">

		<!-- Barre de navigation verticale -->
		<div class="w-64 bg-gray-800 text-white p-6">
			<h2 class="text-2xl font-semibold mb-6">Dashboard</h2>

			<!-- Boutons de navigation -->
			<ul>
				<li class="mb-4">
					<a href="{{ path('app_logout') }}" class="block px-4 py-2 rounded-lg bg-red-600 hover:bg-red-700 transition duration-300">
						Déconnexion
					</a>
				</li>
				<li class="mb-4">
					<button class="block w-full px-4 py-2 rounded-lg bg-gray-600 text-gray-400 cursor-not-allowed" disabled>
						Module 1 (Désactivé)
					</button>
				</li>
				<li>
					<button class="block w-full px-4 py-2 rounded-lg bg-gray-600 text-gray-400 cursor-not-allowed" disabled>
						Module 2 (Désactivé)
					</button>
				</li>
			</ul>
		</div>

		<!-- Contenu principal -->
		<div class="flex-1 py-6 px-4 sm:px-6 lg:px-8">
			<div
				class="max-w-7xl mx-auto">

				<!-- Titre principal -->
				<h1 class="text-4xl font-semibold text-gray-900 mb-6">Dashboard</h1>

				<!-- Contenu du tableau de bord avec cartes -->
				<div
					class="grid grid-cols-1 sm:grid-cols-2 gap-6">

					<!-- Carte 1 -->
					<div class="bg-white p-6 rounded-lg shadow-lg">
						<h3 class="text-xl font-semibold text-gray-800 mb-4">Paiement unique</h3>
						<form action="{{ path('app_dashboard_checkout') }}" method="POST">
							<input type="hidden" name="amount" value="2000" required>
							<input type="hidden" name="quantity" value="1" required>
							<input type="hidden" name="mode" value="payment" required>
							<button type="submit" class="w-full py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition duration-300">
								Payer
							</button>
						</form>
					</div>

					<!-- Carte 2 -->
					<div class="bg-white p-6 rounded-lg shadow-lg">
						<h3 class="text-xl font-semibold text-gray-800 mb-4">Abonnement</h3>
						<form action="{{ path('app_dashboard_checkout') }}" method="POST">
							<input type="hidden" name="amount" value="2000" required>
							<input type="hidden" name="quantity" value="1" required>
							<input type="hidden" name="mode" value="subscription" required>
							<button type="submit" class="w-full py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition duration-300">
								Payer
							</button>
						</form>
					</div>

				</div>

			</div>
		</div>
	</div>

{% endblock %}
